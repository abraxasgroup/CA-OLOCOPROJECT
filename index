  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"Organization",
    "name":"El Caño Loco",
    "url":"https://www.elcanoloco.com.ar/",
    "logo":"https://www.elcanoloco.com.ar/assets/logo-yellow.png",
    "sameAs": [],
    "areaServed":"AR",
    "contactPoint":{
      "@type":"ContactPoint",
      "contactType":"customer support",
      "telephone":"+54-9-11-0000-0000",
      "availableLanguage":"es"
    }
  }
  </script>
  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"FAQPage",
    "mainEntity":[
      {"@type":"Question","name":"¿Hacen envíos a todo el país?","acceptedAnswer":{"@type":"Answer","text":"Sí, coordinamos fletes a todas las provincias y también podés retirar."}},
      {"@type":"Question","name":"¿Venden por mayor y menor?","acceptedAnswer":{"@type":"Answer","text":"Sí. Cotizamos desde pequeños proyectos hasta obras grandes."}},
      {"@type":"Question","name":"¿Los caños están listos para usar?","acceptedAnswer":{"@type":"Answer","text":"Son recuperados e inspeccionados. Dependiendo del uso, se recomiendan ajustes o limpieza."}}
    ]
  }
  </script>

  <script>
    // ======= CONFIGURACIÓN QUE DEBES EDITAR =======
    const WHATSAPP_NUM = "5491100000000"; // <- tu número sin + ni espacios
    const EMAIL_ENDPOINT = "https://formspree.io/f/xxxxxxxx"; 
    // (temporal: podés usar formspree o tu endpoint propio)

    // Precios orientativos x metro (EDITAR según tu lista)
    const PRECIOS = {
      petrolero: { "4": 7800, "5": 9800, "6": 12000, "7": 15000, "8": 17500, "10": 24000, "12": 29500, "14": 36000, "16": 43000, "18": 52000, "20": 61000, "24": 79000, "30": 115000 },
      tubing:   { "2 3/8": 6800, "2 7/8": 8200, "3 1/2": 9900 },
      especial: { "A convenir": 0 }
    };
    // ==============================================

    const yearEl = document.getElementById('y'); yearEl.textContent = new Date().getFullYear();

    // Botones WhatsApp (top, inline, float)
    const waLinks = [document.getElementById('wa-top'), document.getElementById('wa-inline'), document.getElementById('wa-float')];
    waLinks.forEach(el=>{
      if(!el) return;
      el.href = `https://wa.me/${WHATSAPP_NUM}?text=${encodeURIComponent("Hola, quiero info de El Caño Loco.")}`;
      el.target = "_blank"; el.rel="noopener";
    });

    // Prefill de producto al clic en "Cotizar"
    document.querySelectorAll('a[data-prefill]').forEach(a=>{
      a.addEventListener('click', ()=>{
        document.getElementById('tipo').value = a.dataset.prefill;
        buildDiametros();
        document.getElementById('cotizador').scrollIntoView({behavior:'smooth'});
      });
    });

    // Construye los diámetros dinámicos
    const diametrosWrap = document.getElementById('diametros');
    const tipoSel = document.getElementById('tipo');
    function buildDiametros(){
      const t = tipoSel.value;
      diametrosWrap.innerHTML = "";
      Object.keys(PRECIOS[t]).forEach((d,i)=>{
        const id = "d-"+i;
        const div = document.createElement('div');
        div.innerHTML = `
          <label class="pill"><input type="radio" name="diametro" ${i===0?"checked":""} value="${d}"> ${d}"</label>
        `;
        diametrosWrap.appendChild(div);
      });
      updateTotal();
    }
    tipoSel.addEventListener('change', buildDiametros);
    buildDiametros();

    // Estimación
    const form = document.getElementById('quoteForm');
    form.addEventListener('input', updateTotal);
    function getFormData(f){
      const data = Object.fromEntries(new FormData(f));
      if(!data.diametro) data.diametro = Object.keys(PRECIOS[data.tipo])[0];
      return data;
    }
    function updateTotal(){
      const d = getFormData(form);
      const precioMetro = PRECIOS[d.tipo][d.diametro] || 0;
      const metros = parseFloat(d.largo||0) * parseInt(d.cantidad||0);
      const subtotal = Math.max(0, precioMetro * metros);
      document.getElementById('total').textContent = subtotal ? `$ ${subtotal.toLocaleString('es-AR')}` : "$0";
    }

    // Enviar por WhatsApp
    document.getElementById('btn-whatsapp').addEventListener('click', ()=>{
      if(!form.checkValidity()){ form.reportValidity(); return; }
      const d = getFormData(form);
      const texto = `Hola El Caño Loco, quiero cotizar:
- Tipo: ${d.tipo}
- Diámetro: ${d.diametro}"
- Largo: ${d.largo} m
- Cantidad: ${d.cantidad}
- Envío: ${d.envio}
- Uso: ${d.uso||"-"}
- Provincia: ${d.provincia}
Datos: ${d.nombre} / ${d.whatsapp}
Estimación orientativa vista en la web: ${document.getElementById('total').textContent}`;
      const url = `https://wa.me/${WHATSAPP_NUM}?text=${encodeURIComponent(texto)}`;
      window.open(url,'_blank','noopener');
    });

    // Enviar por Email (Formspree / backend propio)
    form.addEventListener('submit', async (e)=>{
      e.preventDefault();
      if(!form.checkValidity()){ form.reportValidity(); return; }
      const d = getFormData(form);
      const payload = {
        nombre:d.nombre, whatsapp:d.whatsapp, provincia:d.provincia, tipo:d.tipo, diametro:d.diametro,
        largo:d.largo, cantidad:d.cantidad, envio:d.envio, uso:d.uso||"", total:document.getElementById('total').textContent
      };
      try{
        const res = await fetch(EMAIL_ENDPOINT,{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify(payload)});
        alert(res.ok ? "¡Gracias! Te escribimos a la brevedad." : "Hubo un problema. Probá por WhatsApp.");
      }catch(err){ alert("No se pudo enviar. Probá por WhatsApp."); }
    });

    // Formulario de contacto simple (mismo endpoint)
    document.getElementById('contactForm').addEventListener('submit', async (e)=>{
      e.preventDefault();
      const data = Object.fromEntries(new FormData(e.target));
      try{
        const res = await fetch(EMAIL_ENDPOINT,{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({form:"contacto",...data})});
        alert(res.ok ? "Mensaje enviado. ¡Gracias!" : "No se pudo enviar. Escribinos por WhatsApp.");
      }catch{ alert("No se pudo enviar. Escribinos por WhatsApp."); }
    });
  </script>

